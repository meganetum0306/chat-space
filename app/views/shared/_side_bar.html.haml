.side-bar
  .side-bar__header
    %h3.side-bar__header__header__name
      = current_user.name
    %ul.side-bar__header__header__name__header__lists
      %li.side-bar__header__header__name__header__lists--list
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.side-bar__header__header__name__header__lists--list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group__name
            = group.name
          .group__message
            = group.show_last_message